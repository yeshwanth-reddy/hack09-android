<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/hotelImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:visibility="visible" />

            <TextView
                android:id="@+id/bm_guest_stayname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:text="Johansons Ultra Deluxe Stay"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/bm_guest_stayaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="Johansons Ultra Deluxe Stay"
                android:textSize="12sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#27000000" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/bm_guest_orderId_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:padding="12dp"
                    android:text="ORDER ID"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/bm_guest_orderId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@+id/bm_guest_orderId_textview"
                    android:gravity="left|center"
                    android:padding="12dp"
                    android:text="123455649893830"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/bm_guest_checkin_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:padding="12dp"
                    android:text="CHECK IN"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/bm_guest_checkin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@+id/bm_guest_checkin_textview"
                    android:gravity="left|center"
                    android:padding="12dp"
                    android:text="21 Aug 2016"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/bm_guest_checkout_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:padding="12dp"
                    android:text="CHECK OUT"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/bm_guest_checkout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/bm_guest_checkout_textview"
                    android:gravity="left|center"
                    android:padding="12dp"
                    android:text="24 Aug 2016"
                    android:textSize="12sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#27000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="16dp"
                android:drawablePadding="10dp"
                android:drawableRight="@android:drawable/ic_menu_share"
                android:gravity="center|left"
                android:padding="5dp"
                android:text="Share the Booking Detail with Friends/Family" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#27000000" />

            <Switch
                android:id="@+id/switch2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Few Things to Remember"
                android:textColor="#90000000" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#27000000" />

            <Switch
                android:id="@+id/switch1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Check In Reminder"
                android:textColor="#90000000" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#27000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:padding="16dp"
                android:text="Near by Places/Events" />

            <ImageView
                android:id="@+id/locationImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:visibility="visible" />

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="1dp"
                android:background="#27000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:padding="16dp"
                android:text="Friends Who Stay Here" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#27000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp">

                <TextView
                    android:id="@+id/bm_guest_call_stayzilla_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@android:drawable/ic_menu_call"
                    android:gravity="center"
                    android:text="Contact Us"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:drawableTop="@android:drawable/ic_menu_close_clear_cancel"
                    android:gravity="center"
                    android:text="Cancel\nBooking"
                    android:textSize="14sp" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>
